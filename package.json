{
  "name": "kalatori-bff",
  "version": "1.0.0",
  "description": "A backend-for-frontend proxying requests to the Kalatori daemon.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist",
    "prestart": "yarn build",
    "pretest": "yarn build"
  },
  "keywords": [
    "kalatori",
    "proxy",
    "backend-for-frontend",
    "polkadot",
    "ecommerce"
  ],
  "author": "Vova Lando",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "typescript": "^4.3.5",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8",
    "eslint": "^7.32.0",
    "@types/node": "^16.0.0",
    "@types/express": "^4.17.13",
    "@types/body-parser": "^1.19.2",
    "@types/morgan": "^1.9.3",
    "@types/jest": "^27.0.1",
    "@types/supertest": "^2.0.11",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.0.0"
  }
}
